<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<nav class="navbar">

	<!-- LOGO â†’ HOME -->
	<a class="logo-brand" href="${pageContext.request.contextPath}/"> <img
		src="${pageContext.request.contextPath}/assets/images/app_logo.png"
		alt="FoodXpress" class="app-logo"
		onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerText='HungerGo';" />
		<span class="brand-text">HungerGO</span>

	</a>

	<div class="navbar-links">

		<a href="${pageContext.request.contextPath}/restaurant?action=list">
			Restaurants </a> <a
			href="${pageContext.request.contextPath}/orderHistory"> My Orders
		</a>

		<!-- CART ICON -->
		<a href="${pageContext.request.contextPath}/cart" class="cart-link">
			<img src="${pageContext.request.contextPath}/assets/images/cart.png"
			alt="Cart" class="cart-icon"  title="View Cart"/>
		</a>


		<c:choose>

			<c:when test="${not empty sessionScope.loggedUser}">

				<a href="${pageContext.request.contextPath}/jsp/customer/home.jsp">
					Home </a>

				<a
					href="${pageContext.request.contextPath}/jsp/customer/profile.jsp">
					My Profile </a>

				<a class="nav-btn"
					href="${pageContext.request.contextPath}/user?action=logout">
					Logout </a>

			</c:when>

			<c:otherwise>

				<a class="nav-btn"
					href="${pageContext.request.contextPath}/user?action=login">
					Login </a>

				<a class="nav-btn"
					href="${pageContext.request.contextPath}/user?action=register">
					Register </a>

			</c:otherwise>

		</c:choose>

	</div>
</nav>